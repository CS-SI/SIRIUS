PROJECT_NAME = "@CMAKE_PROJECT_NAME@"
PROJECT_NUMBER = "@SIRIUS_VERSION@"
STRIP_FROM_PATH = @PROJECT_SOURCE_DIR@ \
                  @PROJECT_BINARY_DIR@

USE_MDFILE_AS_MAINPAGE = @PROJECT_SOURCE_DIR@/README.md
GENERATE_HTML = YES
GENERATE_XML = YES
HTML_EXTRA_STYLESHEET = @PROJECT_SOURCE_DIR@/doc/doxygen/sirius_doxygen.css
GENERATE_LATEX = NO

EXTENSION_MAPPING = sh=C

# input parameters
INPUT = @PROJECT_SOURCE_DIR@/src \
        @PROJECT_SOURCE_DIR@/README.md \
        @PROJECT_SOURCE_DIR@/INTERNALS.md \
        @PROJECT_SOURCE_DIR@/doc/doxygen/sirius_doxygen.css
FILE_PATTERNS = *.h \
                *.md
RECURSIVE = YES
HIDE_FRIEND_COMPOUNDS = YES
EXTRACT_ALL = YES

IMAGE_PATH = @PROJECT_SOURCE_DIR@

# set include directives in generated documentation relative to src directory
STRIP_FROM_INC_PATH = @PROJECT_SOURCE_DIR@/src
